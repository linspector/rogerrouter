<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adwaita" version="1.0"/>
  <template class="RogerAssistant" parent="AdwWindow">
    <property name="default-width">640</property>
    <property name="default-height">550</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-end-title-buttons">False</property>
            <child type="title">
              <object class="AdwWindowTitle" id="window_title">
                <property name="title" translatable="yes">Assistant</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="back_button">
                <property name="label" translatable="yes">Quit</property>
                <property name="receives-default">True</property>
                <signal name="clicked" handler="roger_assistant_back_button_clicked" object="RogerAssistant" swapped="no"/>
              </object>
            </child>
            <child type="end">
              <object class="GtkButton" id="next_button">
                <property name="label" translatable="yes">Next</property>
                <property name="sensitive">False</property>
                <property name="receives-default">True</property>
                <signal name="clicked" handler="roger_assistant_next_button_clicked" object="RogerAssistant" swapped="no"/>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkStack" id="stack">
            <property name="transition-type">slide-left-right</property>
            <child>
              <object class="GtkStackPage">
                <property name="name">profile</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">avatar-default-symbolic</property>
                    <property name="title">Create Profile</property>
                    <property name="description">A profile is linked to the router and helps to identify it, e.g. home</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="hexpand">1</property>
                        <child>
                          <object class="GtkEntry" id="profile_name_entry">
                            <property name="activates-default">True</property>
                            <signal name="changed" handler="roger_assistant_profile_entry_changed" object="RogerAssistant" swapped="no"/>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">router</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">org.tabos.roger-symbolic</property>
                    <property name="title">Select Router</property>
                    <property name="description">Select auto discovered router below.</property>
                    <child>
                      <object class="AdwClamp" id="clamp2">
                        <property name="hexpand">True</property>
                        <child>
                          <object class="GtkScrolledWindow" id="frame">
                            <property name="has-frame">True</property>
                            <child>
                              <object class="GtkListView" id="router_listview">
                               <property name="single-click-activate">True</property>
                                <signal name="activate" handler="roger_assistant_router_listview_activate" object="RogerAssistant" swapped="no"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">password</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">dialog-password-symbolic</property>
                    <property name="title">Router Password</property>
                    <property name="description">Enter router login credentials.</property>
                    <child>
                      <object class="AdwClamp" id="clamp">
                        <property name="hexpand">True</property>
                        <child>
                          <object class="GtkGrid" id="grid">
                            <property name="row-spacing">6</property>
                            <property name="column-spacing">12</property>
                            <child>
                              <object class="GtkLabel" id="label11">
                                <property name="halign">end</property>
                                <property name="label" translatable="yes">User</property>
                                <property name="justify">right</property>
                                <style>
                                  <class name="dim-label"/>
                                </style>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkEntry" id="user_entry">
                                <property name="hexpand">True</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="label12">
                                <property name="halign">end</property>
                                <property name="label" translatable="yes">Password</property>
                                <property name="justify">right</property>
                                <style>
                                  <class name="dim-label"/>
                                </style>
                                <layout>
                                  <property name="column">0</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkPasswordEntry" id="password_entry">
                                <property name="hexpand">True</property>
                                <property name="show-peek-icon">True</property>
                                <property name="activates-default">True</property>
                                <layout>
                                  <property name="column">1</property>
                                  <property name="row">1</property>
                                </layout>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">loading</property>
                <property name="child">
                  <object class="AdwStatusPage" id="loading_page">
                    <property name="icon-name">content-loading-symbolic</property>
                    <property name="title">Please Wait</property>
                    <property name="description">Setup Roger Router</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">finish</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="icon-name">emblem-ok-symbolic</property>
                    <property name="title">Finish!</property>
                    <property name="description">Thanks for using Roger Router and please consider a donation.</property>
                    <child>
                      <object class="AdwClamp">
                        <property name="hexpand">1</property>
                        <child>
                          <object class="GtkButton" id="start_button">
                            <property name="label" translatable="yes">Start using Roger Router</property>
                            <property name="halign">center</property>
                            <signal name="clicked" handler="gtk_window_destroy" object="RogerAssistant" swapped="no"/>
                            <style>
                              <class name="suggested-action"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
